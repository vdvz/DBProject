<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="350.0" xmlns="http://javafx.com/javafx/8.0.281" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.EntranceController">

    <VBox alignment="CENTER" layoutX="50.0" layoutY="35" prefHeight="300.0" prefWidth="260.0">

        <TextArea fx:id="loginText" prefHeight="16.0"  prefWidth="270.0" promptText="Enter login"
                  style="-fx-font-size: 1.5em;">
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
        </TextArea>
        <PasswordField fx:id="passwordText" prefHeight="35.0" promptText="Enter password">
            <VBox.margin>
                <Insets bottom="15.0"/>
            </VBox.margin>
        </PasswordField>
        <HBox>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonTapped"
                    prefHeight="35.0" prefWidth="90.0" text="Cancel">
                <HBox.margin>
                    <Insets right="15.0"/>
                </HBox.margin>
            </Button>

            <Button fx:id="loginButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#loginButtonTapped"
                    prefHeight="35.0" prefWidth="230.0" text="Connect"/>

        </HBox>
    </VBox>

</AnchorPane>
