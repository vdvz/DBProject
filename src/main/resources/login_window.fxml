<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.281" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EntranceController">
    <VBox alignment="CENTER" layoutX="250.0" layoutY="135" prefHeight="300.0" prefWidth="300.0">
        <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonTapped"
                prefHeight="25.0" prefWidth="75.0" text="Back">
            <VBox.margin>
                <Insets bottom="15.0"/>
            </VBox.margin>
        </Button>

        <TextArea fx:id="loginText" prefHeight="16.0" prefWidth="270.0" promptText="Enter login">
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
        </TextArea>
        <PasswordField fx:id="passwordText" alignment="TOP_LEFT" prefHeight="35.0" promptText="Enter password">
            <VBox.margin>
                <Insets bottom="15.0"/>
            </VBox.margin>
        </PasswordField>

        <Button fx:id="loginButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#loginButtonTapped"
                prefHeight="25.0" prefWidth="230.0" text="Connect"/>
    </VBox>

</AnchorPane>
